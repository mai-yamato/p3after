<h1>Books</h1>

<div class="post_index">
  <table class="post_index_table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    <tbody>
      <tr>
        <td></td>
        <td>
          <%= link_to "Show", book_path(@book) %>
          <%= link_to "Edit", edit_book_path %>
          <h4>Destroy</h4>
        </td>
      </tr>
    </tbody>
    </thead>
  </table>
</div>


<div class="new_post">
  <h3>New book</h3>
  <%= form_with model:@book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_field :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
</div>


